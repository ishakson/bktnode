extends ../layouts/main-layout.pug

block content
    .row
        .col-md-4
            img.img-fluid(src=`/img/${product.imageUrl}` alt=`${product.description}`)
        .col-md-8
            h2 #{product.name}
            hr
            h4 #{product.description}
            br
            p price: #{product.price}
            button(type="submit").btn.btn-primary.btn-lg Add to Cart
